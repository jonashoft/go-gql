type BurgerStats {
    # The total number of burgers eaten
    totalOrders: Int!
    # The total number of burger days
    totalBurgerDays: Int!
    # The total number of orders
    topConsumers: [Consumer!]!
}

type Consumer {
    # The user's name
    user: User!
    # The number of burgers eaten
    totalOrders: Int!
    # The number of burger days
    totalBurgerDays: Int!
}

extend type Query {
    # Get the burger stats
    burgerStats: BurgerStats!
}
